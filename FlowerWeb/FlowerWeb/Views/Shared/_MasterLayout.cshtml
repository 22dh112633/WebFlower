                            <td><img src="~/images/🦆 icon _shopping cart_.png"/></td>
                        </tr>
                    </table>
            </div>
        </div>
        <div class="header-nav">
            <table>
                <tr>
                    <td>Hoa Theo Ngày</td>
                    <td>Hoa Theo Mùa</td>
                    <td><img src="~/images/🦆 icon _arrow down _.png" /></td>
                    <td>Hoa Theo Dịp</td>
                    <td><img src="~/images/🦆 icon _arrow down _.png" /></td>
                    <td>Hoa Theo Giá</td>
                    <td><img src="~/images/🦆 icon _arrow down _.png" /></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="body">
            @RenderBody()
    </div>
    <div class="footer">
        Footer
    </div>
</body>
</html>
